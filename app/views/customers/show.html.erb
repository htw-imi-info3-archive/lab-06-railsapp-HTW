<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Discount:</strong>
  <%= @customer.discount %>
</p>

<table>
<caption><strong>Customer's Orders</strong></caption>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Placed on</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	<% @customer.orders.each do |order| %>
      <tr>
          <td><%= order.id %></td>
        <td><%= order.placed_on %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Order', new_order_path(customer: @customer) %>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
