<h1>List orders</h1>

<table>
  <thead>
    <tr>
      <th>Order_ID</th>
      <th>Customer</th>
      <th>Pumpkin</th>
      <th>Price</th>
      <th>Placed_on</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id%></td>
        <td>
          <% if(order.customer_id != nil) %>
          <%= order.customer.name %>
          <% end %>
        </td>
        <td>
          <% if(order.pumpkin_id != nil) %>
          <%= order.pumpkin_name %>
          <% end %>
        </td>
        <td>price_to_come</td>
        <td><%= order.placed_on %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

